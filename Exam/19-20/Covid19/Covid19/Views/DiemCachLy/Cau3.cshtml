@{
}
<label>Tên điểm cách ly</label>
<select id="MaDiemCachLy" name="MaDiemCachLy">
    @foreach (var item in ViewBag.MaDiemCly)
    {
        <option value="@item.madcl">@item.tendcl</option>
    }
</select></br>
<div class="dscn"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#MaDiemCachLy").change(function () {
            var MaDiemCachLy = $(this).val();
            console.log(MaDiemCachLy);
            $.ajax({
                url: "/CongNhan/LietKeCongNhanTrongDiemCachLy",
                method: "post",
                data: { MaDiemCachLy: MaDiemCachLy },
                success: function (data) {
                    $(".dscn").html(data)
                }
            })
        })
    })
</script>